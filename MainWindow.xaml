<Window x:Class="RegionSyd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegionSyd"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" > <!--OBS: Width not set-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Adjust width as needed for left panel -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top-left zone -->
            <ComboBox Grid.Row="0" Margin="10" x:Name="RegionSelector" />

            <!-- Middle-left zone -->
            <DataGrid Grid.Row="1" Margin="10" x:Name="DataDisplay" />

            <!-- Bottom-left zone -->
            <StackPanel Grid.Row="2" Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Match Opgaver" Margin="0,0,5,0"/>
                    <Button Content="Fjern Opgave" />
                </StackPanel>
                <TextBlock Text="Automatiske Forslag" Margin="0,10,0,5"/>
                <ItemsControl x:Name="AutomatiskeForslagList" />
            </StackPanel>
        </Grid>

        <!-- Right Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top-right zone -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
                <TextBlock Text="OPGAVE INFORMATION" Padding="5"/>
            </Border>

            <!-- Center-right zone (Map) -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="10">
                <!-- Replace with actual map control -->
                <TextBlock Text="Map Area" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
